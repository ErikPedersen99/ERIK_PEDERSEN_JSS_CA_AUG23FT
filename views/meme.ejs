<!DOCTYPE html>
<html lang="en">

<head>
  <title>Meme Details</title>
  <link rel="stylesheet" href="../css/bootstrap.min.css" />
  <link href="../stylesheets/navbar.css" rel="stylesheet">
  <link rel="stylesheet" href="../stylesheets/meme.css">
</head>

<body class="position-relative" data-bs-spy="scroll">
  <%- include('./partials/navbar.ejs') %>
    <section class="container">
      <body>
        <div class="container mt-5">
          <h1>Meme Details</h1>
          <div class="card" style="width: 18rem;">
            <img src="<%= meme.url %>" class="card-img-top" alt="<%= meme.name %>">
            <div class="card-body">
              <h5 class="card-title"><%= meme.name %></h5>
              <p class="card-text">ID: <%= meme.id %></p>
              <p class="card-text">Dimensions: <%= meme.width %> x <%= meme.height %></p>
              <a href="<%= meme.url %>" target="_blank" class="btn btn-primary">View Image</a>
              <a href="/memes" class="btn btn-secondary mt-3">Back to Meme Overview</a>
            </div>
          </div>
        </div>
      </body>
    </section>

    <%- include('./partials/scripts.ejs') %>
</body>

</html>